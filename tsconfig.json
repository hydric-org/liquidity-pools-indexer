{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "allowJs": true,
    "checkJs": false,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "noEmit": true,

    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleDetection": "force",
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "ESNext",
    "isolatedModules": true,
    "verbatimModuleSyntax": true
  },
  "include": ["src", "test"]
}
