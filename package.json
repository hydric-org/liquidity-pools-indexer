    "chai": "4.3.10",
    "mocha": "10.2.0",
    "nyc": "^17.1.0",
    "sinon": "^21.0.0",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "envio": "3.0.0-alpha.4",
    "viem": "^2.43.4"
  },
  "optionalDependencies": {
    "generated": "./generated"
  }
